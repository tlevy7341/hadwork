generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Projects {
  id    String  @id @db.Uuid
  name  String  @unique
  user  String
  Todos Todos[]
}

model Todos {
  id          String   @id @db.Uuid
  task        String
  status      String
  projectName String
  Projects    Projects @relation(fields: [projectName], references: [name], onDelete: Cascade, onUpdate: Cascade)
}
